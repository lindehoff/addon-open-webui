{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeAll",
    ":enablePreCommit",
  ],
  includeReleaseNotes: true,
  customManagers: [
    {
      customType: "regex",
      fileMatch: ["^open-webui/config\\.yaml$"],
      matchStrings: [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sversion: \"(?<currentValue>.*?)\"\\s"
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["pre-commit"],
      "automerge": true,
      "automergeType": "branch",
      "semanticCommitType": "chore"
    },
    {
      "matchPaths": ["open-webui/config.yaml"],
      "semanticCommitType": "feat",
      "semanticCommitScope": "openui",
      "commitMessageExtra": "Release notes:\n{{{releaseNotes}}}"
    }
  ],
  minimumReleaseAge: "12 hours",
}