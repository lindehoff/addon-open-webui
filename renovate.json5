{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':semanticCommits',
    ':automergeAll',
    ':enablePreCommit',
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '^open-webui/config\\.yaml$',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sversion: "(?<currentValue>.*?)"\\s',
      ],
      datasourceTemplate: '{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}',
      extractVersionTemplate: '^v?(?<version>.*)$',
    },
    {
      customType: 'regex',
      fileMatch: [
        '^open-webui/config\\.yaml$',
      ],
      matchStrings: [
        'image: "ghcr.io/open-webui/open-webui:v(?<currentValue>.*?)"',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'open-webui/open-webui',
      extractVersionTemplate: '^v?(?<version>.*)$',
      versioningTemplate: 'semver',
    },
  ],
  packageRules: [
    {
      matchManagers: [
        'pre-commit',
      ],
      automerge: true,
      automergeType: 'branch',
      semanticCommitType: 'chore',
    },
    {
      matchFileNames: [
        'open-webui/config.yaml',
      ],
      semanticCommitType: 'feat',
      semanticCommitScope: 'openui',
      commitBody: 'Release notes: {{{releaseNotes}}}',
    },
  ],
  minimumReleaseAge: '4 hours',
}
